<Window x:Name="PopupWindow"
        x:Class="Basic_Financial_Tracker.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basic_Financial_Tracker"
        mc:Ignorable="d"
        Title="Popup" Height="300" Width="300" Background="LightGray" Icon="GoldenCoin.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="popupLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Row="1" x:Name="popupTextBox" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="aPopupButton" Content="Button A" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75"/>
            <Button Grid.Column="1" x:Name="bPopupButton" Content="Button B" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75"/>
        </Grid>
    </Grid>
</Window>
